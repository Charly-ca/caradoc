<div data-controller="navbar" data-action="scroll@window->navbar#scroll">
  <nav class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" data-navbar-target="nav">
    <div class="container mx-auto px-5 py-4 flex items-center justify-between">
      <!-- Logo à gauche -->
      <div>
        <%= link_to root_path do %>
          <%= image_tag "logo-caradoc.png", alt: "Caradoc", class: "h-12 w-12" %>
        <% end %>
      </div>

      <!-- Liens de navigation à droite -->
      <div class="flex gap-8">
        <%= link_to "Accueil", root_path, class: "font-bold transition-colors", data: { navbar_target: "link" } %>
        <%= link_to "Menu", menu_path, class: "font-bold transition-colors", data: { navbar_target: "link" } %>
        <%= link_to "Info", "#contact", class: "font-bold transition-colors", data: { navbar_target: "link" }  %>
      </div>
    </div>
  </nav>
</div>
